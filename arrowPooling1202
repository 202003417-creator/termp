StarPooling {
    -- Property: 별(Star) 스폰 관련 주요 속성 정의
    [None]
    Entity player = nil            -- 
    [None]
    number spawnTime = 2           -- 표창 주기(초 단위)
    [None]
    number time = 0                -- 경과 시간
    [None]
    Entity parent = "/maps/gamemap/Skills" -- 표창 오브젝트가 생성될 부모 엔티티 경로

    -- Function: 동작 및 로직 구현부
    -- client only: 클라이언트단에서만 동작
    void OnBeginPlay() 
    {
        -- 현재 로컬(본인) 플레이어 객체를 저장
        self.player = _UserService.LocalPlayer
    }

    -- 주기적으로 호출되어 표창 생성 타이밍 체크
    void OnUpdate(number delta)
    {
        self.time = self.time + delta    -- 델타 시간만큼 누적

        -- spawnTime 초 경과 시마다 새로운 표창 생성
        if self.time >= self.spawnTime then
            self:Spawn()
            self.time = 0
        end
    }

    -- 표창을 실제로 생성(스폰)하는 함수
    void Spawn()
    {
        if self.parent == nil then
    self.parent = _EntityService:GetEntityByPath("/maps/map02/Skills")
end

if self.Entity.skillLevel.level >= 3 then  -- 여기 코드들은 레벨 3부터 발동
    local arrow2 = _SpawnService:SpawnByModelId("model://674a4a2a-21a3-483b-81b6-41eb3643764f", "표창", self.player.TransformComponent.Position, self.parent)
    arrow2.Arrow.direction = self.player.PlayerControllerComponent.LookDirectionX
    arrow2.Arrow.damage = arrow2.Arrow.damage + (self.Entity.skillLevel.level * 10)
else
    local arrow = _SpawnService:SpawnByModelId("model://700e9855-e999-4570-a570-a2beeb6ae31b", "표창", self.player.TransformComponent.Position, self.parent)
    arrow.Arrow.direction = self.player.PlayerControllerComponent.LookDirectionX
    arrow.Arrow.damage = arrow.Arrow.damage + (self.Entity.skillLevel.level * 10)
end                                 
        )

        -- 표창의 방향 지정: 플레이어가 바라보는 방향으로 설정
        star.Star.direction = self.player.PlayerControllerComponent.LookDirectionX
    }
}
