LightningPooling = {
    Property = {
        [None],
        number spawnTime = 2,      -- 번개가 소환되는 주기(초)
        [None],
        number time = 0,             -- 시간 저장 변수
        [None],
        entity player = nil          -- 플레이어 객체 참조
    },

    Function = {
        -- 클라이언트 전용 함수
        void OnUpdate(number delta) {
            -- 플레이어가 "Start" 맵이면 함수 종료
            if self.player.CurrentMapName == "Start" then
                return
            end

            -- 타이머 누적
            self.time = self.time + delta

            -- 소환 시간이 되면 번개 효과 및 공격 처리
            if self.time >= self.spawnTime then
                local x = math.random(-6, 6)    -- X좌표 무작위
                local y = math.random(-4, 4)    -- Y좌표 무작위

        if self.time >= (self.spawnTime - (self.Entity.skillLevel.level * 0.1)) then
    if self.Entity.skillLevel.level >= 3 then
        -- 두 번 반복
        for i = 1, 2 do
            local x = math.random(-6, 6)
            local y = math.random(-5, 5)
            _EffectService:PlayEffect("9f58bac772bb4176a05c0961f31d92fa", self.Entity, self.player.TransformComponent.Position + Vector3(x, y, 0), 0, Vector3.one)
            self.Entity.PlayerAttack:AttackFrom(Vector2.one * 2, Vector2(self.player.TransformComponent.Position.x + x, self.player.TransformComponent.Position.y + y), "")
        end
    else
        local x = math.random(-6, 6)
        local y = math.random(-5, 5)
        _EffectService:PlayEffect("9f58bac772bb4176a05c0961f31d92fa", self.Entity, self.player.TransformComponent.Position + Vector3(x, y, 0), 0, Vector3.one)
        self.Entity.PlayerAttack:AttackFrom(Vector2.one * 2, Vector2(self.player.TransformComponent.Position.x + x, self.player.TransformComponent.Position.y + y), "")
    end
    self.time = 0  -- 타이머 초기화
end
                
           
        },

        -- 클라이언트 전용 맵 시작 시 호출
        void OnBeginPlay() {
            self.player = _UserService.LocalPlayer    -- 로컬 플레이어 객체 할당
        }
    },

    -- 엔티티 이벤트 핸들러 (추가 가능)
    Entity Event Handler:  + 
}
